    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/index.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--experimental-transform-types",
                "--disable-warning=ExperimentalWarning",
            ],
            "type": "node",
            "outputCapture": "std",
        },
    ]
}