{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/bun/tsconfig",
  ],
  "compilerOptions": {
    // Disable extra strict rules
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    // Output
    "noEmit": true,
  },
  "include": [
    "**/*.ts",
    ".*.*js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}